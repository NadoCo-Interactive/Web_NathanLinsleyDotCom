@{
    ViewData["Title"] = "Home Page";
}

<head>
  <style>
        div {
          user-select: none;
        }

        img {
          -webkit-user-drag: none;
        }

        .material-icons {
            font-family: 'Material Icons';
            font-weight: normal;
            font-style: normal;
            font-size: 200px;
        }

        .container-main {
            display: flex;
            flex: 1;
            flex-direction: column;
        }

        .container3 {
            display: flex;
            flex: 1;
            align-items: center;
            height: 700px;
        }

        .button {
          border-radius: 8px;
          border: 1px solid white;
          padding: 10px;
          width: 300px;
          height: 50px;
            color: white;
            text-shadow: 1px 1px 5px #fff;
            background: #111144;
        }

        .actionBox {
            box-shadow: 10px 10px 20px rgba(0, 0, 0, 0.2);
            background: #FFF;
            margin-left: 10px;
            border-radius: 8px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .actionBox:active {
            color: #22AAFF !important;
        }

        .actionBoxText {
            
            font-size: 10px;
        }

        .skillBox {
            width: 300px;
            height: 300px;
            border-radius: 25px;
        }

        .skillBoxIcon {
            font-size: 100px !important;
        }

        .skillBoxText {
            margin-top: 20px !important;
            font-size: 40px !important;
        }

        .skillBox:hover {
            animation: skillBoxHover 0.25s forwards;
            cursor: pointer;
        }

        @@keyframes skillBoxHover {
            to {
                width: 310px;
                height: 310px;
                color: #2222FF;
            }
        }

        .clientBox {
            width: 100px;
            height: 100px;
        }

        .clientBoxIcon {
            font-size: 25px !important;
        }

        .clientBox:hover {
            animation: clientBoxHover 0.25s forwards;
            cursor: pointer;
        }

        @@keyframes clientBoxHover {
            to {
                width: 110px;
                height: 110px;
                color: #2222FF;
            }
        }
        

        .button:hover {
          animation: buttonBorder 0.25s forwards, buttonText 0.05s forwards;
                
        }

        @@keyframes buttonText {
            from {
                font-size: 16px;
            }

            to {
                font-size: 18px;
            }
        }
        @@keyframes buttonBorder {

            to {
                border-radius: 100px;
            }
        }
  </style>
</head>
<div class="container-main" style="overflow-y:scroll; overflow-x:hidden">
    <div class="container3" style="background: linear-gradient(to bottom, #fff, #ddd 25%,#ddd 75%, #fff);">
    <div style="flex: 1; padding: 100px; padding-right: 0px; "> 
        <h1 class="display-1">Hey there!</h1>
        <p class="lead">I'm Nathan. I'm a Freelance Web Developer from Sydney</p>
        <p class="lead" style="font-size: 14px">I build awesome websites for Small Businesses and Startups ... without breaking the bank at the same time!</p>
        <button class="button">Let's Chat!</button>
    </div>
    <div style="flex: 1; padding: 100px;">
      <img src="./img/nathan_transparent.png" style="max-width: 400px"/>
    </div>
    
   </div>
    <div class="container3" style="padding-top: 100px; flex-direction: column;">
        <h3 >What do you need?</h3>
        <div style="display: flex">
            <div class="actionBox skillBox">
                <span class="material-symbols-outlined skillBoxIcon">
                    feature_search
                </span>
                <h2 class="actionBoxText skillBoxText">SEO</h2>
            </div>
            <div class="actionBox skillBox">
                <span class="material-symbols-outlined skillBoxIcon">
                    web
                </span>
                <h2 class="actionBoxText skillBoxText">Websites</h2>
            </div>
            <div class="actionBox skillBox">
                <span class="material-symbols-outlined skillBoxIcon">
                    phone_android
                </span>
                <h2 class="actionBoxText skillBoxText">Mobile Apps</h2>
            </div>
        </div>
   </div>
    <div class="container3" style="padding-top: 100px; flex-direction: column;">
        <h3>My Clients</h3>
        <div style="display: flex">
            <div class="actionBox clientBox">
                <img src="./img/nathan_transparent.png" style="max-width: 40px" />
            </div>
            <div class="actionBox clientBox">
                <img src="./img/nathan_transparent.png" style="max-width: 40px" />
            </div>
            <div class="actionBox clientBox">
                <img src="./img/nathan_transparent.png" style="max-width: 40px" />
            </div>
        </div>
    </div>

</div>
